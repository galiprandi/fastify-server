{
  "name": "fastify-server",
  "version": "1.0.0",
  "description": "A Modern Fastify Server",
  "main": "src/index.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git@github.com:galiprandi/fastify-server.git"
  },
  "scripts": {
