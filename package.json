  "devDependencies": {
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.9.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@fastify/autoload": "^6.0.2",
    "fastify": "^5.1.0",
    "fastify-blipp": "^4.0.0",
